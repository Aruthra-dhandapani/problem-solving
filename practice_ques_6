

import java.util.*;
public class Main
{
	public static void main(String[] args) {
		Scanner obj=new Scanner(System.in);
		int n=obj.nextInt();
		int m=obj.nextInt();
		int d=0,nd=0;
		for(int i=1;i<=m;i++)
		{
		    if(i%n==0)
		    d+=i;
		    else
		    nd+=i;
		}
		
		System.out.println(Math.abs(d-nd));
	}
}
