import java.util.*;
public class Main
{
	public static void main(String[] args) {
		Scanner obj=new Scanner(System.in);
		int n=obj.nextInt();
		int[] arr=new int[n];
		for(int i=0;i<n;i++)
		{
		    arr[i]=obj.nextInt();
		}
		int s=0,c=0;
		for(int i=0;i<n;i++)
		{
		    if(i%2==0)
		    c+=arr[i];
		    else
		    s+=arr[i];
		}
		
		System.out.println(Math.max(s,c));
	}
}
